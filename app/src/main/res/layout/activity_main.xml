<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:layout_width="387dp"
            android:layout_height="437dp" app:srcCompat="@drawable/ball_640x480"
            android:id="@+id/imageView"
            tools:layout_editor_absoluteX="-4dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="2dp"
            android:scaleType="fitStart"/>
    <Button
            android:text="Нажми меня"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="152dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="144dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView"/>
</android.support.constraint.ConstraintLayout>